<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.navigator.navigatordrawer.RegisterActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/register_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/register_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

            <LinearLayout
                android:id="@+id/registration_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textTablet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/data_tablet"
                    />

                <EditText
                    android:id="@+id/number_tablet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_number_tablet"
                    android:inputType="number"
                    android:maxLines="1"
                    android:ems="10"
                    android:singleLine="true"
                    />

                <EditText
                    android:id="@+id/ip_tablet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_ip_tablet"
                    android:maxLines="1"
                    android:ems="10"
                    android:singleLine="true"
                    />

                <EditText
                    android:id="@+id/port_tablet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_port_tablet"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/textServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/data_server"
                    />

                <EditText
                    android:id="@+id/ip_server"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_ip_server"
                    android:maxLines="1"
                    android:ems="10"
                    android:singleLine="true"
                    />

                <EditText
                    android:id="@+id/port_server"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_port_server"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <Button
                    android:id="@+id/registger_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/action_register"
                    android:textStyle="bold"/>

            </LinearLayout>
    </ScrollView>

</LinearLayout>



